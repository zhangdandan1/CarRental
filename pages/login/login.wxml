<!--登录-->
<view class="container"> 
      <view style="width:100%;height:100%">
        <image style="width:100%;height:100%" mode="scaleToFill" src="../../images/loginimg/bg@2x.png" />
      </view>
  <view class="login-from"> 
      
        <!--账号-->
          <view class="inputView"> 
            <image class="nameImage" src="../../images/loginimg/Accoun@2x.png"></image> 
            <label class="loginLab">账号</label> 
            <input class="inputText" placeholder="请输入账号" bindinput="phoneInput" /> 
          </view> 
          <view class="line"></view> 
            
          <!--密码-->
          <view class="inputView"> 
            <image class="keyImage" src="../../images/loginimg/Password@2x.png"></image> 
            <label class="loginLab">密码</label> 
            <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /> 
          </view> 
            
